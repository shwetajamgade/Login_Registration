@model tbl_UserReg
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/CSS/Registration.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div id="userProfile">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6"  id="userImg">
                    <img src="~/Images/login.png" class="img-fluid"/>
                </div>
                <div class="col-sm-6" id="userEditForm">
                    @using (Html.BeginForm("UserProfile", "Home", FormMethod.Post))
                    {
                        <form>
                            <h4>User Update Form</h4>
                            @Html.HiddenFor(model => model.UserID)
                            <div class="mb-3 mt-3">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-user"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control" })
                                </div>

                            </div>
                            <div class="mb-3 mt-3">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-envelope"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="mb-3 mt-3">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-key"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="mb-3 mt-3">
                                <div class="form-check form-check-inline">
                                    <label>Gender:&nbsp;&nbsp;</label>
                                    @Html.RadioButtonFor(model => model.Gender, "Male", htmlAttributes: new { @name = "gender" })
                                    <label class="form-check-label">Male</label>
                                    @Html.RadioButtonFor(model => model.Gender, "Female", htmlAttributes: new { @name = "gender" })
                                    <label class="form-check-label">Female</label>
                                </div>
                            </div>
                            <div class="mb-3 mt-3">
                                <div class="form-check form-check-inline">
                                    <label>Intrest:&nbsp;&nbsp;</label>

                                    @Html.CheckBox("cSharp", Model.IntrestedInCsharp.Value)
                                    <label class="form-check-label">C#</label>

                                    @Html.CheckBox("Java", Model.IntrestedInJava.Value)
                                    <label class="form-check-label">Java</label>

                                    @Html.CheckBox("Python", Model.IntrestedInPython.Value)
                                    <label class="form-check-label">Python</label>
                                </div>
                            </div>
                            <div class="mb-3 mt-3">
                                <div class="col-md-2 mx-auto">
                                    <input type="submit" value="Update" />
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

